<!doctype html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" type="text/css" href="/dist/style.css">
        <script type="text/javascript" src="/dist/app.js"></script>
    </head>
    <body>
        <div class="body-container">
            <div class="article-container">
                <article>
                    <h1>{{title}}</h1>
                    <div>{{{body}}}</div>
                </article>
            </div>
            <section>
                <h2>Comments</h2>
                <div class="comments-containter">
                    <div id="js-comments-container">
                        <div id="js-editor-container">
                            {{{editor}}}
                        </div>
                        <div id="js-thread-container">
                            {{{comments}}}
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div id="js-init-data" data-json="{{initJSON}}"></div>
        <div id="js-data-msg"></div>
    </body>
</html>
